+#define CONFIG_ETHADDR 0x00:0xaa:0xbb:0xcc:0xdd:0xee
+#define CFG_FAULT_ECHO_LINK_DOWN    1
+
+
+#define CFG_PHY_ADDR 0
+#define CFG_AG7240_NMACS 2
+#define CFG_GMII     0
+#define CFG_MII0_RMII             1
+#define CFG_AG7100_GE0_RMII             1
