+
+#define CFG_DDR_REFRESH_VAL     0x4f10
+#define CFG_DDR_CONFIG_VAL      0xc7bc8cd0
+#define CFG_DDR_MODE_VAL_INIT   0x133
+#ifdef LOW_DRIVE_STRENGTH
+#       define CFG_DDR_EXT_MODE_VAL    0x2
+#else
+#       define CFG_DDR_EXT_MODE_VAL    0x0
